class Palyndrome:
    def estPalyndrome(word):
        if (word == word[::-1]):
            return True
        else:
            return False

def main():
    sentence = input("enter a word pls: ")
    if(Palyndrome.estPalyndrome(sentence) is True):
        print("is a palyndrome")
    else:
        print("isn't a palyndrome")
if __name__=="__main__":
    main()